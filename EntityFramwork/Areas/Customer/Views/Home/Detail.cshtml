@model Models.Product

<form method="post">
    <input hidden asp-for="Id" />
    <div class="card shadow-lg border-0 mt-4 mb-4">
        <div class="card-header bg-primary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    @if (Model != null)
                    {
                        <h3 class="text-white text-uppercase">@Model.Title</h3>
                        <p class="text-white-50 fw-semibold mb-0">by @Model.Author</p>
                    }
                    else
                    {
                        <h3 class="text-white">Product not found</h3>
                    }
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-area="Home" asp-controller="Home" asp-action="Index" class="btn btn-outline-light bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Back to home</small>
                        </a>
                    </div>
                </div>

                @if (Model != null)
                {
                    <div class="row">
                        <!-- Product Image and Details Section -->
                        <div class="col-12 col-md-6 offset-md-1">
                            <!-- Product Image -->
                            <div class="mb-4">
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <img src="@Url.Content("~/"+Model.ImageUrl)" class="img-fluid rounded" alt="@Model.Title" />
                                }
                                else
                                {
                                    <img src="https://placehold.co/500x600/png" class="img-fluid rounded" alt="Placeholder" />
                                }
                            </div>

                            <!-- Product Info -->
                            <div class="mb-3">
                                <span class="badge bg-secondary">@Model?.Category?.Name ?? "No Category"</span>
                            </div>

                            <h6 class="text-dark">ISBN: <span class="text-muted">@Model.ISBN</span></h6>
                            <h5 class="text-danger py-3">
                                <span class="text-decoration-line-through">@Model.ListPrice.ToString("c")</span>
                                <span class="ms-2">@Model.Price.ToString("c")</span>
                            </h5>

                            <h6 class="text-muted">Description:</h6>
                            <p>@Model.Description</p>
                        </div>

                        <!-- Side Information (Price, Stock, etc.) -->
                        <div class="col-12 col-md-4">
                            <div class="card shadow-sm p-4">
                                <h5 class="mb-4">Product Information</h5>
                                <ul class="list-unstyled">
                                    <li><strong>Title:</strong> @Model.Title</li>
                                    <li><strong>Author:</strong> @Model.Author</li>
                                    <li><strong>Category:</strong> @Model.Category?.Name ?? "No Category"</li>
                                    <li><strong>ISBN:</strong> @Model.ISBN</li>
                                    <li><strong>Price:</strong> @Model.Price.ToString("c")</li>
                                </ul>
                                <div class="d-grid gap-2">
                                    <button asp-area="Customer" asp-controller="Cart" asp-action="AddToCart" type="submit" class="btn btn-primary btn-lg">Add to Cart</button>
                                    <button type="button" class="btn btn-success btn-lg">Buy Now</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-danger">Sorry, the product you're looking for doesn't exist.</div>
                }
            </div>
        </div>
    </div>
</form>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0v8FqCGfLs0v5u5pF0z5LwB0aA+zpmXb3z5bftQZGzB5gtK3" crossorigin="anonymous"></script>
